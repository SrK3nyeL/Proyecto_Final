<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#015D67">

    <!-- Imagen del logotipo (una bombilla) -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_logo"
        android:contentDescription="Logotipo del juego"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="60dp"/>

    <!-- Bot贸n Jugar -->
    <Button
        android:id="@+id/botonJugar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/jugar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"/>

    <!-- Bot贸n Puntajes -->
    <Button
        android:id="@+id/botonPuntajes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Puntajes"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F44336"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/botonJugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"/>

    <!-- Bot贸n flotante inferior (opcional) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Bot贸n de Opciones"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
